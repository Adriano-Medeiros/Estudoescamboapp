<div class="row">
<div class="col-12">
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
      <li class="breadcrumb-item active"><%=action%></li>
    </ol>  
    </div>
      <div class="container-fluid">
        
      <% if @category.errors.any? %>     
        
          <% @category.errors.full_messages.each do |message| %>
            <li>
              <script>
                $.notify("<%=message %>","error");
              </script>
            </li>
            <% end %>
          </ul>
          </div>
          <%end%>
      </div>
    </div>
    </div>
    <div class="card mb-3">
    
    <div class="card-body">
      <div class="table-responsive">
      <%= form_for ([:backoffice, @category]) do |f| %> 
      <div class="form-group, col-6 ">
      <label>Digite o nome da categoria a ser criada:</label>
      <%= f.text_field :description, class:"form-control", placeholder:"Exemplo: Animais/Pet" %>
      <button type="submit" class="btn btn-primary btn-lg">Salvar</button>
      </div> 
        <%end%>  
    
        </div>
    </div>
    <div class="card-footer small"></div>
    </div>
    
   