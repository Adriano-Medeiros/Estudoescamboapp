
<ol class="breadcrumb">
      <li class="breadcrumb-item active">Lista dos Administradores</li>
    </ol>  
</div>
    
</div>
</div>
<div class="card mb-3">
<div class="card-header">
<i ></i></div>

  <div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>
          <%= link_to new_backoffice_admin_path, class:"btn btn-success btn-circle btn-lg" do %>
            <i class="fa fa-plus"></i>
          <% end %>

          
          </th>
        </tr>
      </thead>
      <tbody>
      <% @admins.each do |admin| %> 
       <tr>
        <td>
          <%= admin.id %>
        </td>
        <td>
          <%= admin.email %>
        </td>
          <td style = "width: 300px">
           <%= link_to edit_backoffice_admin_path(admin.id),
               class:"btn btn-primary btn-circle btn-lg" do %>
               <i class="fa fa-edit"></i>
           <% end %>
           
            <%if current_admin.id != admin.id %>   
                <%= link_to backoffice_admin_path(admin.id), method: :delete, class:"btn btn-danger btn-circle btn-lg ",
                  data: {confirm: "Você deseja realmente excluir (#{admin.email})?"} do %>
                <i class="fa fa-times"></i>
                <% end %>
            <% else %>
                <%= link_to '#', disabled: "disabled", class:"btn btn-danger btn-circle btn-lg",
                data: {confirm: "Você não pode excluir o administrador logado (#{admin.email})?"} do %>
                <i class="fa fa-times"></i>
                <% end %>
            <% end %>  

        </th>
      </tr>
     <%end%> 
            
    </tbody>
    </table>
  </div>
  
</div>

</div>
